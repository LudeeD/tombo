{
  "manifest_version": 3,
  "name": "Tombo Tower",
  "version": "1.0",
  "description": "Access your tombo tower anywhere anytime",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "cookies",
    "scripting"
  ],
  "host_permissions": ["http://localhost:3000/*"],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Prompt Manager"
  }
}
